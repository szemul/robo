{
  "name": "szemul/robo",
  "description": "Base robo classes with openapi generation support",
  "license": "MIT",
  "minimum-stability": "stable",
  "require": {
    "php": "^8.1",
    "consolidation/robo": "^3.0|^4.0|^5.0",
    "josegonzalez/dotenv": "^3.2.0|^4.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0.0",
    "jetbrains/phpstorm-attributes": "^1.0",
    "mockery/mockery": "^1.0",
    "phpstan/phpstan": "^2.0",
    "phpunit/phpunit": "^12"
  },
  "autoload": {
    "psr-4": {
      "Szemul\\Robo\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Szemul\\Robo\\Test\\": "tests"
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": false
  }
}
